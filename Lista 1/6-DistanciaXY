#include <stdio.h>
#include <stdlib.h>
#include <math.h>

struct ponto{
   float x;
   float y;
};

float distancia(struct ponto *ponto1, struct ponto *ponto2){

   float aux1;
   float aux2;
   float result;

   aux1 = ponto2->x - ponto1->x;
   aux2 = ponto2->y - ponto1->y;

   result = aux1 * aux1 + aux2 * aux2;
   
   return sqrt(result);
};

int main(){

    struct ponto p1 , p2;

    printf("Digite as corrdenadas do 1° ponto (x y): ");
    scanf("%f %f",&p1.x, &p1.y);

    printf("Digite as corrdenadas do 2° ponto (x y): ");
    scanf("%f %f",&p2.x, &p2.y);
    
    float resultado = distancia(&p1 , &p2);

    printf("A distancia entre os pontos é: %f ", resultado);

};